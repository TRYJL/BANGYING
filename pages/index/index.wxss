/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
.box{
  color: aqua;
  width: 50%;
  height: 50px;
  background: black;
}
.boxhaver{
  background: aliceblue
}
.myscroll{
  width: 100%;
  height: 100rpx;
  background: bisque;
  white-space: nowrap;
}
.myscroll .row{
  width: 200rpx;
  height: 100rpx;
  background:burlywood;
  margin-right: 10rpx;
  display: inline-block;
}
.myscroll .row:last-child{
  margin-right: 0;
}

.out .box1{
  position: relative;
  z-index: 20;
  width: 300rpx;
  height: 300rpx;
  background: aqua;

}
.out .box2{
  position: relative;
  width: 350rpx;
  height: 350rpx;
  background: blue;
  z-index: 10;
  left: 100px;
  top: -100px;
}
.logbutton{
  background: rgb(149, 159, 170);
  width: 100rpx;
  height: 100rpx;
}
.logbutton .logp{
  width: 100rpx;
  height: 100rpx;
}
